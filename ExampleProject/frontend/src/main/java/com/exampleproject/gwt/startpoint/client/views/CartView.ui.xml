<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel spacing="5">
        <g:cell width="500px"  horizontalAlignment="ALIGN_RIGHT">
            <g:Button ui:field="close" text="Close"/>
        </g:cell>
        <g:HorizontalPanel ui:field="booksPanel"/>
        <g:Label text="(Choose a book you want to delete and press button)"/>
        <g:Button ui:field="deleteButton" text="Delete book"/>
        <g:HorizontalPanel spacing="5">
            <g:Label text="Price: "/>
            <g:Label ui:field="priceLabel" />
            <g:Label text=" euro"/>
        </g:HorizontalPanel>
        <g:Button ui:field="placeOrder" text="Place your order"/>
        <g:VerticalPanel ui:field="orderPanel"/>
    </g:VerticalPanel>
</ui:UiBinder>