<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel spacing="5" width="400" height="250">
        <g:Label text="Логин: "/>
        <g:TextBox ui:field="loginBox" width="300" />
        <g:Label text = "Пароль:"/>
        <g:TextBox ui:field="passwordBox" width="300"/>
        <g:VerticalPanel spacing="5" horizontalAlignment="CENTER">
            <g:Button ui:field="loginButton" text="Войти"/>
            <g:Button ui:field="signUp" text="Зарегистрироваться"/>
        </g:VerticalPanel>
        <g:Label ui:field="errorLabel" height="20"/>
    </g:VerticalPanel>
</ui:UiBinder>