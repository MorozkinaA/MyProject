<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel spacing="5">
        <g:HorizontalPanel spacing="5">
            <g:Label text="Имя: "/>
            <g:TextBox ui:field="nameBox"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="5">
            <g:Label text="Фамилия: "/>
            <g:TextBox ui:field="surnameBox"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="5">
            <g:Label text="E-mail: "/>
            <g:TextBox ui:field="emailBox"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="5">
            <g:Label text="Логин: "/>
            <g:TextBox ui:field="loginBox"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="5">
            <g:Label text="Пароль: "/>
            <g:TextBox ui:field="passwordBox"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel spacing="5">
            <g:Label text="Повторите пароль: "/>
            <g:TextBox ui:field="confirmPasswordBox"/>
        </g:HorizontalPanel>
        <g:Button ui:field="signUpButton" text="Зарегестрироваться"/>
        <g:Label ui:field="errorLabel"/>
    </g:VerticalPanel>
</ui:UiBinder>