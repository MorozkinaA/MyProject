<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel spacing="5">
        <g:Image ui:field="booksPhoto"/>
        <g:Label ui:field="title"/>
        <g:Label ui:field="author"/>
        <g:Label ui:field="publisher"/>
        <g:Label ui:field="pages"/>
        <g:Label ui:field="description"/>
        <g:Label ui:field="canBuy"/> <!--depends on qty of books. if gty = 0, then book is not available-->
        <g:Button ui:field="toCart" text="В корзину"/>
        <g:Button ui:field="close" text="Закрыть"/>
    </g:VerticalPanel>
</ui:UiBinder>