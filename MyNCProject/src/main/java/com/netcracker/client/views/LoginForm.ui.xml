<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
        <g:VerticalPanel spacing="5">
            <g:Label text="Логин: "/>
            <g:TextBox ui:field="loginBox" />
            <g:Label text = "Пароль:"/>
            <g:TextBox ui:field="passwordBox"/>
            <g:Button ui:field="loginButton" text="Войти"/>
            <g:HorizontalPanel spacing="5">
                <g:Button ui:field="signUp" text="Зарегистрироваться"/>
            </g:HorizontalPanel>
            <g:Label ui:field="errorLabel"/>
        </g:VerticalPanel>

</ui:UiBinder>